  "bugs": {
    "url": "https://github.com/anhallbe/brollop/issues"
  },
  "homepage": "https://github.com/anhallbe/brollop#readme",
  "devDependencies": {
    "browser-sync": "^2.27.9",
    "concurrently": "^7.1.0",
    "prettier": "^2.8.1",
    "sass": "^1.50.0",
    "typescript": "^4.6.3"
  }
}
